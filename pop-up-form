      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
      <script type="text/javascript">
         $(function() {
         
         // contact form animations
         $('#download').click(function() {
           $('#contactForm , #overlay-back').fadeToggle();
         })
         $(document).mouseup(function (e) {
           var container = $("#contactForm");
           var overlay = $("#overlay-back");
           if (!container.is(e.target) // if the target of the click isn't the container...
               && container.has(e.target).length === 0) // ... nor a descendant of the container
           {
               container.fadeOut();
               overlay.fadeOut();
           }
         });
         
         });
         $(function() {
           $('.error').hide();
           $(".button").click(function() {
             // validate and process form here
           
             $('.error').hide();
               
             var first_name = $("input#first_name").val();
             var last_name = $("input#last_name").val();
             var company = $("input#company").val();
             var email = $("input#email").val();
             var phone = $("input#phone").val();
             var usecase = $("#usecase").val();
         
                 if (first_name == "") {
               $("label#first_name_error").show().css("color", "#fc651b");
               $("input#first_name").css("border-color", "#fc651b");
               return false;
             }
                 if (last_name == "") {
               $("label#last_name_error").show().css("color", "#fc651b");
               $("input#last_name").css("border-color", "#fc651b");
               return false;
             }
             
                 if (company == "") {
               $("label#company_error").show().css("color", "#fc651b");
               $("input#company").css("border-color", "#fc651b");
               return false;
             }
                 
                 if (email == "") {
               $("label#email_error").show().css("color", "#fc651b");
               $("input#email").css("border-color", "#fc651b");
               return false;
             }
                 
                 if (phone == "") {
               $("label#phone_error").show().css("color", "#fc651b");
               $("input#phone").css("border-color", "#fc651b");
               return false;
             }
         
          $(this).val('Please wait ...');
         
         var dataString = 'first_name='+ first_name + 
         '&last_name='+ last_name + 
         '&company='+ company +
         '&email=' + email + 
         '&phone=' + phone +
         '&usecase='+ usecase;
         
         $.ajax({
               type: "POST",
               url: "../../../sites/all/themes/company/form-handler.php",
               data: dataString,
             dataType:"html",
               success: function() {
                 $('#success').fadeIn().css("display", "block");
                 $('#btnsubmit').val("Submitted").prop("disabled", true);
               },
               error: function(XMLHttpRequest, textStatus, errorThrown) {
               console.log(XMLHttpRequest, textStatus, errorThrown);
               }
           });
         
             return false;
             
           });
         });
         
             
      </script>
   </body>
